<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <record id="libyan_invoice_report" model="ir.actions.report">
            <field name="name">Libyan Invoice</field>
            <field name="model">account.move</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">invoice_payment_report.report_libyan_invoice</field>
            <field name="report_file">invoice_payment_report.report_libyan_invoice</field>
            <field name="binding_model_id" ref="account.model_account_move"/>
            <field name="binding_type">report</field>
            <field name="print_report_name">"Invoice"</field>
        </record>

        <record id="libyan_payment_report" model="ir.actions.report">
            <field name="name">Libyan Payment</field>
            <field name="model">account.payment</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">invoice_payment_report.report_libyan_payment</field>
            <field name="report_file">invoice_payment_report.report_libyan_payment</field>
            <field name="binding_model_id" ref="account.model_account_payment"/>
            <field name="binding_type">report</field>
            <field name="print_report_name">Payment</field>
        </record>

        <template id="invoice_payment_layout">
            <t t-set="company" t-value="o.company_id"/>
             <div class="header" style="float:left !important;direction:ltr !important;text-align:left;font-family:Cairo-Black !important;">
                <div class="row col-12 pull-left oe_inline Cairo-Black">
                <div class="col-7 pull-left">
                        <img t-att-src="image_data_uri(company.logo)" style="width:300px !important;"/>
                    </div>
                </div>
             </div>
             <div class="article" t-att-data-oe-model="doc and doc._name" t-att-data-oe-id="doc and doc.id"
                 t-att-data-oe-lang="doc and doc.env.context.get('lang')">
                <t t-out="0"/>
            </div>
            <div class="footer o_standard_footer" style="margin-bottom: 20px !important;padding-bottom:200mm !important;height:20px !important;">
                <div class="text-center" style="border-top: 1px solid black;">
<!--                    <ul class="list-inline">-->
                      <div class="col-12 text-center" t-if="o.qr_code">
                    <div class="col-3 mb6 pull-right">
                        <img t-if="o.qr_code" t-att-src="image_data_uri(o.qr_code)"
                             style="max-height: 100px;" alt="QR Code"/>
                    </div>
                    <div class="col-9 pull-left mt3">
                        <div class="col-9 pull-left" style="text-align:left !important;direction:ltr !important;float:left !important;" t-if="company.phone"><i class="fa fa-mobile"><span t-field="company.phone" style="text-align:left !important;"/></i></div>
                        <div class="col-9 pull-left" style="text-align:left !important;direction:ltr !important;float:left !important;" t-if="company.mobile"><i class="fa fa-mobile"><span t-field="company.mobile" style="text-align:left !important;"/></i></div>
                        <div class="col-9 pull-left" style="text-align:left !important;direction:ltr !important;float:left !important;" t-if="company.email"><i class="fa fa-envelope"><span t-field="company.email" style="text-align:left !important;"/></i></div>
                        <div class="col-9 pull-left" style="text-align:left !important;direction:ltr !important;float:left !important;" t-if="company.website"><i class="fa fa-globe"><span t-field="company.website" style="text-align:left !important;"/></i></div>
                        <div class="col-9 pull-left" style="text-align:left !important;direction:ltr !important;float:left !important;" t-if="company.street"><i class="fa fa-map-marker"><span t-field="company.street" style="text-align:left !important;"/></i></div>
                    </div>
                </div>

<!--                    </ul>-->
                  </div>
<!--                <hr/>-->

            </div>
        </template>

    </data>
</odoo>