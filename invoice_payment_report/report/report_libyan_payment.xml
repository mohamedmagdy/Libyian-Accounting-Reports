<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <template id="report_libyan_payment">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="invoice_payment_report.invoice_payment_layout">
                        <div class="page">
                            <div class="row text-center" style="text-align: center !important;">
                                <div class="row col-12 text-center pull-right"
                                     style="text-align: center !important;float:right: direction:rtl !important;">
                                    <h2 style="font-family: Cairo-Black !important;font-weight: bold;text-align: center !important;width:100%;"
                                        class="text-center">إيصال قبض
                                    </h2>
                                </div>
                            </div>
                            <div class="row pull-right"
                                 style="direction:rtl !important;text-align:right !important;font-family: Cairo-Light !important; width:100%;">
                                <table style="width:100%;font-family: Cairo-Light !important;">
                                    <tr>
                                        <td style="text-align:right !important;font-family: Cairo-Black !important;">
                                            <strong style="font-family: Cairo-Black  !important;">إستلام من</strong>
                                            <br/>
                                        </td>
                                        <td style="text-align:right !important;font-family: Cairo-Black !important;float:right !important;">
                                            <strong>رقم الإيصال:</strong>
                                            <t t-esc="o.name"/>
                                            <br/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="text-align:right !important;font-family: Cairo-Black !important;">
                                            <strong style="font-family: Cairo-Black !important;">اسم الشركة: </strong>
                                            <t t-esc="o.partner_id.name"/>
                                            <br/>
                                        </td>
                                        <td style="text-align:right !important;font-family: Cairo-Black !important;float:right !important;">
                                            <strong>التاريخ: </strong>
                                            <t t-esc="o.date"/>
                                            <br/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="text-align:right !important;font-family: Cairo-Black !important;">
                                            <strong style="font-family: Cairo-Black !important;">عنوان الشركة: </strong>
                                            <t t-esc="o.partner_id.name"/>
                                            <br/>
                                        </td>
                                        <td/>
                                    </tr>
                                    <tr>
                                        <td style="text-align:right !important;font-family: Cairo-Black !important;">
                                            <strong style="font-family: Cairo-Black !important;">البريد الإلكتروني: </strong>
                                            <t t-esc="o.partner_id.email"/>
                                            <br/>
                                        </td>
                                        <td/>
                                    </tr>
                                    <tr>
                                        <td style="text-align:right !important;font-family: Cairo-Black !important;">
                                            <strong style="font-family: Cairo-Black !important;">رقم الهاتف: </strong>
                                            <t t-esc="o.partner_id.phone"/>
                                            <br/>
                                        </td>
                                        <td/>
                                    </tr>
                                </table>
                            </div>
                            <div class="row pull-right"
                                 style="direction:rtl !important;text-align:right !important;font-family: Cairo-Light !important; width:100%;">
                                <table class="table table-bordered" style="width:100%;font-family: Cairo-Black !important;">
                                    <tr>
                                        <th style="text-align:center !important;font-family: Cairo-Black !important;">قيمة وقدرها</th>
                                        <td style="text-align:center !important;font-family: Cairo-Light !important;">
                                            <t t-esc="o.amount" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th style="text-align:center !important;font-family: Cairo-Black !important;">الملاحظات</th>

                                        <td style="text-align:center !important;font-family: Cairo-Light !important;">
                                            <t t-esc="o.ref"/>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                            <div class="row pull-left" style="width:100%;font-family: Cairo-Black !important;direction:rtl;text-align:right;">
                                <div>باقي الحساب: </div>
                                <span t-esc="o.partner_id.payment_amount_due" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>

    </data>
</odoo>